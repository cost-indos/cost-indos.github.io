      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          {% assign nav_items = site.data.navigation %}
          {% for item in nav_items %}
            {% comment %} Determine active state: check page.url or page.path contains item.match {% endcomment %}
            {% assign is_active = false %}
            {% if item.match and page.url %}
              {% if page.url == item.url or page.url contains item.match or page.path contains item.match %}
                {% assign is_active = true %}
              {% endif %}
            {% endif %}
            <li class="nav-item">
              <a class="nav-link {% if is_active %}active{% endif %}" href="{{ item.url | relative_url }}">{{ item.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </nav>
